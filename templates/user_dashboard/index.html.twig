{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
{% endblock %}

{% block main %}
    <div class="ea-content">
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Profile Details</h5>
                <ul class="list-group">
                    <li class="list-group-item"><strong>MeterId:</strong> {{ user.userIdentifier }}</li>
                    <li class="list-group-item"><strong>Name:</strong> {{ user.firstName }} {{ user.lastName }}</li>
                    <li class="list-group-item"><strong>Current consumption:</strong> {{ consumptionKwh }}</li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
{% endblock %}


