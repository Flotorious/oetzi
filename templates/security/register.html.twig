{% extends 'base.html.twig' %}

{% block body %}
    <!-- Registration 7 - Bootstrap Brain Component -->
    <section class="bg-light p-3 p-md-4 p-xl-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
                    <div class="card border border-light-subtle rounded-4">
                        <div class="card-body p-3 p-md-4 p-xl-5">
                            <div class="row">
                                <div class="col-12">
                                    <div class="mb-5">
                                        <div class="text-center mb-4">
                                            <a href="{{ path('app_home') }}">
                                                <img class="w-50"
                                                     src="{{ asset('img/logo-long.png') }}"
                                                     alt="EnergyViz Logo"
                                                >
                                            </a>
                                        </div>
                                        <h2 class="h4 text-center">Registration</h2>
                                        <h3 class="fs-6 fw-normal text-secondary text-center m-0">Enter your details to register</h3>
                                    </div>
                                </div>
                            </div>
                            {{ form_start(form, { attr: { class: 'row gy-3 overflow-hidden' } }) }}

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.firstName, { attr: { placeholder: 'First Name', class: 'form-control' } }) }}
                                    <label for="{{ form.firstName.vars.id }}">First Name</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.lastName, { attr: { placeholder: 'Last Name', class: 'form-control' } }) }}
                                    <label for="{{ form.lastName.vars.id }}">Last Name</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.email, { attr: { placeholder: 'Email', class: 'form-control' } }) }}
                                    <label for="{{ form.email.vars.id }}">Email</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.phone, { attr: { placeholder: 'Phone', class: 'form-control' } }) }}
                                    <label for="{{ form.phone.vars.id }}">Phone</label>
                                </div>
                            </div>

                            <div class="d-flex align-items-center my-4">
                                <hr class="flex-grow-1">
                                <span class="mx-3 text-muted">Address</span>
                                <hr class="flex-grow-1">
                            </div>


                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.street, { attr: { placeholder: 'Street', class: 'form-control' } }) }}
                                    <label for="{{ form.street.vars.id }}">Street</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.city, { attr: { placeholder: 'City', class: 'form-control' } }) }}
                                    <label for="{{ form.city.vars.id }}">City</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.postalCode, { attr: { placeholder: 'Postal Code', class: 'form-control' } }) }}
                                    <label for="{{ form.postalCode.vars.id }}">Postal Code</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.country, { attr: { placeholder: 'Country', class: 'form-control' } }) }}
                                    <label for="{{ form.country.vars.id }}">Country</label>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.meterIdentifier, { attr: { placeholder: 'Electricity Meter ID', class: 'form-control' } }) }}
                                    <label for="{{ form.meterIdentifier.vars.id }}">Electricity Meter ID</label>
                                </div>
                            </div>

                            <div class="d-flex align-items-center my-4">
                                <hr class="flex-grow-1">
                                <span class="mx-3 text-muted">Password</span>
                                <hr class="flex-grow-1">
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.plainPassword.first, { attr: { placeholder: 'Password', class: 'form-control' } }) }}
                                    <label for="{{ form.plainPassword.first.vars.id }}">Password</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    {{ form_widget(form.plainPassword.second, { attr: { placeholder: 'Repeat Password', class: 'form-control' } }) }}
                                    <label for="{{ form.plainPassword.second.vars.id }}">Repeat Password</label>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="d-grid">
                                    <button class="btn bsb-btn-xl btn-primary" type="submit">Sign up</button>
                                </div>
                            </div>

                            {{ form_end(form) }}

                            <div class="row">
                                <div class="col-12">
                                    <hr class="mt-5 mb-4 border-secondary-subtle">
                                    <p class="m-0 text-secondary text-center">Already have an account? <a href="{{ path('app_login') }}" class="link-primary text-decoration-none">Sign in</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
