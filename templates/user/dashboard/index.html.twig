{% extends '@EasyAdmin/page/content.html.twig' %}
{% import _self as macros %}

{% block content_title %}
{% endblock %}

{% block content_top_header %}
    {{ include('user/partials/_content_top_header.html.twig') }}
    {{ parent() }}
{% endblock %}

{% block main %}
    <div class="ea-content">
        {{ include('user/dashboard/partials/_widget_cards_top.html.twig') }}

        <!-- Section - Bootstrap Brain Component -->
        <section class="pb-3 pb-md-4 pb-xl-5">
            <div class="row gy-3 gy-md-4">
                <div class="col-12 col-lg-6 col-xl-8">
                    <!-- Chart 1 - Bootstrap Brain Component -->
                    <div class="card widget-card border-light shadow-sm h-100">
                        <div class="card-body p-4">
                            <div class="d-block d-sm-flex align-items-center justify-content-between mb-3">
                                <div class="mb-3 mb-sm-0">
                                    <h5 class="card-title widget-card-title">SmartMeter Reads Overview</h5>
                                </div>

                                {% set today = "now"|date("Y-m-d") %}
                                {% set days = [] %}
                                {% for i in 0..6 %}
                                    {% set day = (date(today)|date_modify("-" ~ i ~ " day")).format("Y-m-d") %}
                                    {% set days = days|merge([day]) %}
                                {% endfor %}

                                <div>
                                    <select id="daily-usage-date" class="form-select text-secondary border-light-subtle">
                                        {% for day in days %}
                                            <option value="{{ day }}" {% if day == today %}selected{% endif %}>
                                                {{ day|date("l, d M Y") }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div id="bsb-chart-1">
                                {{ include('user/graphs/partials/_daily_energy_usage.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 col-xl-4">
                    <!-- Chart 4 - Bootstrap Brain Component -->
                    <div class="card widget-card border-light shadow-sm h-100">
                        <div class="card-body p-4">
                            <div class="d-block d-sm-flex align-items-center justify-content-between mb-3">
                                <div class="mb-3 mb-sm-0">
                                    <h5 class="card-title widget-card-title">Price</h5>
                                </div>

                                {% set now = "now"|date("Y-m") %}
                                {% set months = [] %}
                                {% for i in 0..6 %}
                                    {% set month = (date(now ~ "-01")|date_modify("-" ~ i ~ " month")).format("Y-m") %}
                                    {% set months = months|merge([month]) %}
                                {% endfor %}

                                <div>
                                    <select id="piechart-month" class="form-select text-secondary border-light-subtle">
                                        {% for month in months %}
                                            <option value="{{ month }}" {% if month == now %}selected{% endif %}>
                                                {{ month|date("F Y") }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div id="bsb-chart-4">
                                {{ include('user/graphs/partials/_monthly_energy_price.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <!-- Chart 4 - Bootstrap Brain Component -->
                    <div class="card widget-card border-light shadow-sm h-100">
                        <div class="card-body p-4">
                            <div class="d-block d-sm-flex align-items-center justify-content-between mb-3">
                                <div class="mb-3 mb-sm-0">
                                    <h5 class="card-title widget-card-title">Logged Devices</h5>
                                </div>
                                <div class="d-flex align-items-center gap-2">
                                    <label for="from-date" class="me-2">From:</label>
                                    <input type="date" id="from-date"
                                           value="{{ fromDate is defined ? fromDate|date('Y-m-d') : '2025-01-21' }}">
                                    <label for="to-date" class="mx-2">To:</label>
                                    <input type="date" id="to-date"
                                           value="{{ toDate is defined ? toDate|date('Y-m-d') : '2025-05-30' }}">
                                    <button id="device-usage-filter-btn" class="btn btn-primary btn-sm">Show</button>
                                </div>
                            </div>
                            <div id="bsb-chart-4">
                                {{ include('user/graphs/partials/_weekly_device_usage.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
{% endblock %}


