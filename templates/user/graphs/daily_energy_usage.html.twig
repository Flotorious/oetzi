{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
{% endblock %}

{% block main %}
    <div class="ea-content">
        <div class="col-12">
            <div class="mb-3 d-flex align-items-center gap-2">
                <label for="daily-usage-date" class="me-2">Day:</label>
                <input type="date" id="daily-usage-date"
                       value="{{ day is defined ? day|date('Y-m-d') : 'now'|date('Y-m-d') }}">
            </div>
            {{ include('user/graphs/partials/_daily_energy_usage.html.twig') }}
            <button type="button" data-action="click->daily-energy-usage#resetZoom">Reset Zoom</button>
        </div>
    </div>
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
{% endblock %}


