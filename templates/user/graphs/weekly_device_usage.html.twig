{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
{% endblock %}

{% block content_top_header %}
    <div class="w-100 d-block d-md-flex align-items-center pe-md-5">
        <div>
            <h1 class="fs-5">Daily Device Usage</h1>
        </div>
        <div class="d-flex flex-wrap align-items-center gap-2 ps-md-5">
            <div class="d-flex align-items-center gap-2">
                <label for="from-date" class="col-form-label me-2">From:</label>
                <input type="date" id="from-date"
                       class="form-control form-control-sm rounded-2"
                       value="{{ fromDate is defined ? fromDate|date('Y-m-d') : '2025-01-21' }}">
                <label for="to-date" class="col-form-label me-2">To:</label>
                <input type="date"
                       id="to-date"
                       class="form-control form-control-sm rounded-2"
                       value="{{ toDate is defined ? toDate|date('Y-m-d') : '2025-05-30' }}">
                <button id="device-usage-filter-btn"
                        class="btn btn-sm px-2 fs-7 btn-primary ms-3 shadow-sm"
                >
                    Show
                </button>
            </div>
        </div>
    </div>
    {{ parent() }}
{% endblock %}

{% block main %}
    <div class="ea-content">
        <div class="col-12">
            {{ include('user/graphs/partials/_weekly_device_usage.html.twig') }}
        </div>
    </div>
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
{% endblock %}


